<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.gbif</groupId>
    <artifactId>motherpom</artifactId>
    <version>37</version>
  </parent>

  <groupId>org.gbif.validator</groupId>
  <artifactId>validator-motherpom</artifactId>
  <version>0.1-SNAPSHOT</version>
  <packaging>pom</packaging>

  <name>GBIF Data Validator</name>
  <description>Umbrella to hold all data validation related work</description>
  <url>http://github.org/gbif/gbif-data-validator</url>

  <scm>
    <connection>scm:git:git@github.com:gbif/gbif-data-validator.git</connection>
    <url>https://github.com/gbif/gbif-data-validator</url>
    <developerConnection>scm:git:git@github.com:gbif/gbif-data-validator.git</developerConnection>
    <tag>HEAD</tag>
  </scm>

  <distributionManagement>
    <site>
      <id>gh-pages</id>
      <url>http://gbif.github.io/gbif-data-validator/</url>
    </site>
  </distributionManagement>

  <modules>
    <module>validator-core</module>
    <module>validator-ws</module>
    <module>validator-processor</module>
  </modules>

  <properties>
    <jdkLevel>1.8</jdkLevel>
    <release.tagNameBase>validator</release.tagNameBase>

    <!-- VERSIONS -->

    <!-- GBIF VERSIONS -->
    <dwc-api.version>1.16</dwc-api.version>
    <dwca-io.version>1.28-SNAPSHOT</dwca-io.version>
    <gbif-api.version>0.48-SNAPSHOT</gbif-api.version>
    <gbif-common.version>0.29-SNAPSHOT</gbif-common.version>
    <gbif-common-ws.version>0.36</gbif-common-ws.version>
    <gbif-occurrence.version>0.58-SNAPSHOT</gbif-occurrence.version>

    <jersey.version>1.18.3</jersey.version>
    <jackson.version>1.9.12</jackson.version>

    <slf4j.version>1.7.16</slf4j.version>

    <junit.version>4.12</junit.version>
  </properties>

  <repositories>
    <repository>
      <id>gbif-all</id>
      <url>http://repository.gbif.org/content/groups/gbif</url>
    </repository>
    <repository>
      <id>akka-previous</id>
      <url>http://repo.akka.io/releases/</url>
    </repository>
  </repositories>

  <dependencyManagement>
    <dependencies>
      <!-- GBIF -->
      <dependency>
        <groupId>org.gbif</groupId>
        <artifactId>gbif-api</artifactId>
        <version>${gbif-api.version}</version>
      </dependency>
      <dependency>
        <groupId>org.gbif</groupId>
        <artifactId>dwc-api</artifactId>
        <version>${dwc-api.version}</version>
      </dependency>
      <dependency>
        <groupId>org.gbif</groupId>
        <artifactId>dwca-io</artifactId>
        <version>${dwca-io.version}</version>
      </dependency>
      <dependency>
        <groupId>org.gbif</groupId>
        <artifactId>gbif-common</artifactId>
        <version>${gbif-common.version}</version>
      </dependency>
      <dependency>
        <groupId>org.gbif</groupId>
        <artifactId>gbif-common-ws</artifactId>
        <version>${gbif-common-ws.version}</version>
      </dependency>
      <dependency>
        <groupId>org.gbif.occurrence</groupId>
        <artifactId>occurrence-processor</artifactId>
        <version>${gbif-occurrence.version}</version>
      </dependency>
      <dependency>
        <groupId>org.gbif.occurrence</groupId>
        <artifactId>occurrence-common</artifactId>
        <version>${gbif-occurrence.version}</version>
      </dependency>

      <dependency>
        <groupId>com.sun.jersey</groupId>
        <artifactId>jersey-client</artifactId>
        <version>${jersey.version}</version>
      </dependency>
      <dependency>
        <groupId>com.sun.jersey.contribs</groupId>
        <artifactId>jersey-apache-client</artifactId>
        <version>${jersey.version}</version>
      </dependency>
      <dependency>
        <groupId>org.codehaus.jackson</groupId>
        <artifactId>jackson-jaxrs</artifactId>
        <version>${jackson.version}</version>
      </dependency>

      <!-- Logging -->
      <dependency>
        <groupId>org.slf4j</groupId>
        <artifactId>slf4j-api</artifactId>
        <version>${slf4j.version}</version>
      </dependency>

      <!-- TEST PIECES -->
      <dependency>
        <groupId>junit</groupId>
        <artifactId>junit</artifactId>
        <version>${junit.version}</version>
        <scope>test</scope>
      </dependency>

    </dependencies>
  </dependencyManagement>
</project>
